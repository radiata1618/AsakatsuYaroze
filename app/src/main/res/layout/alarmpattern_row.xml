<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">


    <data>
        <variable
            name="alarmPatternData"
            type="com.app.asakatsuyaroze.adapter.MainActivityAlarmPatternData" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/alarmPatternName"
            android:layout_width="326dp"
            android:layout_height="42dp"
            android:text="@{alarmPatternData.patternName}" />

        <TextView
            android:id="@+id/alarmPatternId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@{alarmPatternData.idAsString}" />
    </RelativeLayout>

</layout>